<% provide(:title, @glossary.title) %>
<%= content_tag :h1, @glossary.title, class: 'glossary-title' %>


<%= content_tag :div, id: 'term-list' do %>
	<%= content_tag :div, class: 'search' do %>
		<%= text_field_tag 'search', nil, class: 'search', autofocus: true, autocomplete: :off %>
	<% end %>
		<%= content_tag :ol, id: 'terms', class: 'list' do %>
			<%= render @terms if @terms.any? %>
		<% end %>
<% end %>
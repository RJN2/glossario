<%= content_tag :li, id: "glossary_#{glossary.id}", class: "glossary-line" do %>
	<%= link_to glossary_path(glossary),
							remote: true,
							method: :delete,
							data: { confirm: "You sure?" },
							id: "delete_glossary_#{glossary.id}",
							class: 'delete glossary-delete' do %>
		<%= content_tag :i, nil, class: "fa fa-archive fa-2x" %>
	<% end %>
	<%= link_to glossary.title.upcase, glossary_path(glossary), id: "glossary-#{glossary.id}", class: 'glossary-link' %>
	<span class="break">\\</span>
	<span id="created" class="created"><%= glossary.created_at.strftime("#{glossary.created_at.day.ordinalize} %B, %Y") %></span>
<% end %>
<% if controller_name == 'registrations' %>
	controller = 'signup-error';
	section = '2';
<% elsif controller_name == 'sessions' %>
	controller = 'signin-error';
	section = '1';
<% end %>

elController = $('.' + controller);
elSection 	 = $('#section'+section);


if (elController.length > 0) {
	elController.remove();
	elSection.append("<%= escape_javascript raw(flash_normal) %>");
	$('.alert').removeClass('alert-warning');
	$('.alert').addClass(controller).removeClass('alert');
} else {
	elSection.append("<%= escape_javascript raw(flash_normal) %>");
	$('.alert').removeClass('alert-warning');
	$('.alert').addClass(controller).removeClass('alert');
}
